{% extends "layout.njk" %}

{% block header %}
		{% include "parts/navbar-admin.njk" %}
{% endblock %}

{% block content %}

		<div class="admin__sectionBox">
				<h1 class="admin__sectionTitle admin__sectionTitle--color admin__sectionTitle--font">Chef:
						{{chef.name}}</h1>
				<a class="admin__sectionButton admin__sectionButton--color admin__sectionButton--font admin__sectionButton--size" href="/admin/chefs/{{chef.id}}/edit">Editar chef</a>
		</div>

		{% include "parts/chef-details.njk" %}

		<div class="admin__sectionBox">
				<h1 class="admin__sectionTitle admin__sectionTitle--color admin__sectionTitle--font">Receitas</h1>
		</div>

		<section class="cardSection-admin">
				{% for recipe in chefRecipes %}
						<div class="cardSection-admin__item" id="{{recipe.id}}">
								<div class="cardSection-admin__imageBox">
										<img class="cardSection-admin__image" src="{{recipe.image}}" alt="{{recipe.title}}">
								</div>
								<div class="cardSection-admin__info">
										<h3 class="cardSection-admin__recipeTitle cardSection-admin__recipeTitle--font cardSection-admin__recipeTitle--color">{{recipe.title}}</h3>
										<p class="cardSection-admin__chefName cardSection-admin__chefName--font cardSection-admin__chefName--color">{{chef.name}}</p>
										<a class="cardSection-admin__link cardSection-admin__link--font cardSection-admin__link--color" href="/admin/recipes/{{recipe.id}}">Visualizar</a>
								</div>
						</div>
				{% endfor %}
		</section>

{% endblock %}

{% block footer %}
		{% include "parts/footer.njk" %}
{% endblock %}

{% block scripts %}
		<script src="/chefScripts.js"></script>
{% endblock scripts %}