{% extends "layout.njk" %}

{% block header %}
		{% include "parts/navbar-admin.njk" %}
{% endblock %}

{% block content %}

		<form class="admin__deleteForm" id="delete_form" method="POST" action="/admin/recipes?_method=DELETE">
				<input class="admin__hiddenInput" type="hidden" name="id" value="{{recipe.id}}">
		</form>

		<form class="admin__recipeForm" method="POST" action="/admin/recipes?_method=PUT" enctype="multipart/form-data">
				<div class="admin__sectionBox">
						<h1 class="admin__sectionTitle admin__sectionTitle--color admin__sectionTitle--font">Editando receita</h1>
						<div class="admin__sectionButtonBox">
								<input class="admin__hiddenInput" type="hidden" name="id" value="{{recipe.id}}">
								<button class="admin__sectionButton admin__sectionButton--deleteColor admin__sectionButton--font admin__sectionButton--size" type="submit" form="delete_form" onclick="handleDeleteConfirmation()">Deletar</button>
								<button class="admin__sectionButton admin__sectionButton--color admin__sectionButton--font admin__sectionButton--size" type="submit">Salvar receita</button>
						</div>
				</div>
				{% include 'restricted/recipes/fields.njk' %}
		</form>

{% endblock content %}

{% block scripts %}
		<script src="/scripts/recipes.js"></script>
{% endblock scripts %}