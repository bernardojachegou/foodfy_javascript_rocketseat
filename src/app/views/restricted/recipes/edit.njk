{% extends "layout.njk" %}

{% block header %}
		{% include "parts/admin-navbar.njk" %}
{% endblock %}

{% block content %}
		<div class="all">

				<form id="delete_form" method="POST" action="/admin/recipes?_method=DELETE">
						<input type="hidden" name="id" value="{{recipe.id}}">
				</form>

				<form method="POST" action="/admin/recipes?_method=PUT" enctype="multipart/form-data">
						<div class="recipe_options">
								<h1>Editando receita</h1>
								<div class="options_buttons">
										<input type="hidden" name="id" value="{{recipe.id}}">
										<button id="delete_button" class="crud_button" type="submit" form="delete_form" onclick="handleDeleteConfirmation()">Deletar</button>
										<button class="crud_button" type="submit">Salvar receita</button>
								</div>
						</div>
						{% include 'restricted/recipes/fields.njk' %}
				</form>
		</div>
{% endblock content %}

{% block scripts %}
		<script src="/scripts/recipes.js"></script>
{% endblock scripts %}