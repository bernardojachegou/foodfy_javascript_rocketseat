{% extends "layout.njk" %}

{% block head %}
		<title>Foodfy - Receitas</title>
{% endblock %}

{% block header %}
		{% include "parts/navbar-admin.njk" %}
{% endblock %}

{% block content %}
		<div class="recipe_options">
				<h1>Gerenciar receitas</h1>
				<a class="crud_button" href="/admin/recipes/create">Nova receita</a>
		</div>
		<section class="admin-cards">

				{% for recipe in recipes %}
						<div class="admin-card" id="{{recipe.id}}">
								<div class="admin-card-img">
										<img src="{{recipe.image}}" alt="{{recipe.title}}">
								</div>
								<div class="admin-card-info">
										<h3>{{recipe.title}}</h3>
										<p id="author_name">{{recipe.author}}</p>
										<a href="/admin/recipes/{{recipe.id}}">Vizualizar</a>
								</div>
						</div>
				{% endfor %}
		</section>
{% endblock %}