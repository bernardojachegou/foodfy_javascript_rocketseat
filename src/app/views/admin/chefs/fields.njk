<div class="item">
    <h3>Nome</h3>
    <div>
        <input type="text" name="name" value="{{ chef.name }}"/>
    </div>
</div>

<div class="item">
    <h3>Avatar</h3>
    <div id="input-avatar">
        <div id="avatar_upload">
            <input 
                id="avatar-input"
                type="file"  
                name="chef_avatar"
                accept="image/*"
                onchange="AvatarUpload.handleFileInput(event)"
            >
            <div id="avatar-preview">
                <input type="text" name="avatar_preview" value=""/>
            </div>
            <p>Enviar avatar</p>
        </div>
    </div>
</div>