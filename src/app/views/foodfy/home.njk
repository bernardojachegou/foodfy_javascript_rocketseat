{% extends "layout.njk" %}

{% block header %}
		<header class="menu">
				<div class="links">
						{% block navbar %}
								{% include "parts/foodfy-navbar.njk"%}
						{% endblock %}
						{% block filter %}
								{% include "parts/filter.njk" %}
						{% endblock %}
				</div>
		</header>
{% endblock %}

{% block content %}
		<div class="welcome_banner">
				<div class="description">
						<h1>As melhores receitas</h1>
						<p>Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.</p>
				</div>
				<div class="image">
						<img src="./assets/chef.png" alt="Chef">
				</div>
		</div>
		<div id="wrapper">
				<h2>Mais acessadas</h2>
		</div>
		<section class="cards">
				{% for recipe in recipes %}
						{% if loop.index0 < 6 %}
								{% include "parts/foodfy-recipes.njk" %}
						{% endif %}
				{% endfor %}
		</section>
{% endblock %}