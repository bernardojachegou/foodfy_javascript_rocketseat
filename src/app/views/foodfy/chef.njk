{% extends "layout.njk" %}

{% block header %}
		<header class="header header--white">
				<div class="header__navbar">
						{% block navbar %}
								{% include "parts/foodfy-navbar.njk"%}
						{% endblock %}
						{% block filter %}
								{% include "parts/filter.njk" %}
						{% endblock %}
				</div>
		</header>
{% endblock %}

{% block content %}
		<div class="recipe_details">
				<div class="chef-box-img">
						{% if not files[0] %}
								<img src="http://placehold.it/500x500?text=Chef sem foto" alt="Chef">
						{% else %}
								<img src="{{files[0].src}}" alt="{{files[0].name}}">
						{% endif %}
						<h1>{{chef.name}}</h1>
						<p>{{chef.total_recipes}}
								receitas</p>
				</div>

				<div class="recipe_options">
						<h1>Receitas</h1>
				</div>
				<div class="cards">
						{% for recipe in chefRecipes %}
								{% include "parts/foodfy-recipes.njk" %}
						{% endfor %}
				</div>

		</div>
{% endblock %}

{% block scripts %}
		<script src="/scripts/chefs.js"></script>
		<script src="/scripts/recipes.js"></script>
{% endblock scripts %}