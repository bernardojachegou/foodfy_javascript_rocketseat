{% extends "layout.njk" %}

{% block head %}
		<title>Foodfy - Receitas</title>
{% endblock %}

{% block header %}
		<header class="header header--white">
				<div class="header__navbar">
						{% block navbar %}
								{% include "parts/navbar.njk"%}
						{% endblock %}
						{% block filter %}
								{% include "parts/filter.njk" %}
						{% endblock %}
				</div>
		</header>
{% endblock %}

{% block content %}
		<section class="cardSection">
				{% for recipe in recipes %}
						{% include "parts/recipes-section.njk" %}
				{% endfor %}
		</section>
{% endblock %}

{% block scripts %}
		<script src="/scripts/recipes.js"></script>
{% endblock scripts %}