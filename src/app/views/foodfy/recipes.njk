{% extends "layout.njk" %}

{% block header %}
		<header class="menu">
				<div class="links">
						{% block navbar %}
								{% include "parts/foodfy-navbar.njk"%}
						{% endblock %}
						{% block filter %}
								{% include "parts/filter.njk"%}
						{% endblock %}
				</div>
		</header>
{% endblock %}

{% block head %}
		<title>Foodfy - Receitas</title>
{% endblock %}

{% block content %}
		<section class="cards">
				{% for recipe in recipes %}
						<div class="card" id="{{recipe.id}}">
								<div class="card_image">
										<img src="{{recipe.image}}" alt="{{recipe.title}}">
								</div>
								<div class="card_info">
										<h3>{{recipe.title}}</h3>
										<p id="author_name">Por
												{{recipe.chef_name}}</p>
								</div>
						</div>
				{% endfor %}
		</section>
{% endblock %}

{% block scripts %}
		<script src="/recipes_funcs.js"></script>
{% endblock scripts %}