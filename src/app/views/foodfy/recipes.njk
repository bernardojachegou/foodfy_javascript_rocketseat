{% extends "layout.njk" %}

{% block header %}
		<header class="menu">
				<div class="links">
						{% block navbar %}
								{% include "parts/foodfy-navbar.njk"%}
						{% endblock %}
						{% block filter %}
								{% include "parts/filter.njk"%}
						{% endblock %}
				</div>
		</header>
{% endblock %}

{% block head %}
		<title>Foodfy - Receitas</title>
{% endblock %}

{% block content %}
		<section class="cards">
				{% for recipe in recipes %}
						{% include "parts/foodfy-recipes.njk" %}
				{% endfor %}
		</section>
{% endblock %}

{% block scripts %}{% endblock scripts %}