{% extends "layout.njk" %}

{% block header %}
  <header class="menu">
    <div class="links">
      {% block navbar %}
        {% include "parts/foodfy-navbar.njk"%}
      {% endblock %}
    </div>
  </header>
{% endblock %}

{% block content %}
  <section class="login container form">
    <form method="POST" action="/users/login">

      <div class="header">
        <h3>Iniciar Sess√£o</h3>
      </div>

      <div class="item">
        <div>Email</div>
        <div class="input">
          <input type="email" name="email" placeholder="Digite o seu email" value="{{user.email}}" onblur="Validate.apply(this, 'isEmail')">
        </div>
      </div>

      <div class="item">
        <div>Senha</div>
        <div class="input">
          <input type="password" name="password" placeholder="Digite sua senha">
        </div>
      </div>

      <a class="button" href="#">Perdeu a senha?</a>
      <button class="button" type="submit">Entrar</button>

    </form>
  </section>
{% endblock %}