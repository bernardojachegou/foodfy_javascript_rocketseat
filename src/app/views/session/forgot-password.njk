{% extends "layout.njk" %}

{% block content %}
  <section class="session">
    <form class="session__form" method="POST" action="">

      <div class="session__imageBox">
        <a class="session__link" href="/">
          <img class="session__image" src="/assets/logo2.png" alt="logo">
        </a>
      </div>

      <div class="session__header">
        <h3 class="session__title session__title--font">Esqueceu a Senha?</h3>
      </div>

      <div class="session__item">
        <label class="session__label" for="email">Email</label>
        <div class="session__inputBox">
          <input class="session__input session__input--color session__input--font" type="email" name="email" placeholder="Digite o seu email" value="{{user.email}}" onblur="Validate.apply(this, 'isEmail')">
        </div>
      </div>

      <div class="session__buttonBox session__buttonBox--position">
        <button class="session__button session__button--color session__button--font" type="submit">Recuperar</button>
      </div>

    </form>
  </section>
{% endblock content %}