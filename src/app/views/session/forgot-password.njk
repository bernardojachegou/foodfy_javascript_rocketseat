{% extends "layout.njk" %}

{% block content %}
  <section class="forgot-password">
    <form method="POST" action="">

      <div class="logo-box">
        <a id="link_logo" href="/"><img id="logo" src="/assets/logo2.png" alt="logo"></a>
      </div>

      <div class="header">
        <h3>Esqueceu a Senha?</h3>
      </div>

      <div class="item">
        <label for="email">Email</label>
        <div class="input">
          <input type="email" name="email" placeholder="Digite o seu email" value="{{user.email}}" onblur="Validate.apply(this, 'isEmail')">
        </div>
      </div>

      <div class="button-box">
        <button class="button" type="submit">Recuperar</button>
      </div>

    </form>
  </section>
{% endblock content %}