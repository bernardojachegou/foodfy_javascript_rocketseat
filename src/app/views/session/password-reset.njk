{% extends "layout.njk" %}

{% block content %}
  <section class="password-reset">
    <form method="POST" action="">

      <div class="logo-box">
        <a id="link_logo" href="/"><img id="logo" src="/assets/logo2.png" alt="logo"></a>
      </div>

      <div class="header">
        <h3>Nova Senha</h3>
      </div>

      <div class="item">
        <label for="email">Email</label>
        <div class="input">
          <input type="email" name="email" placeholder="Digite o seu email" value="{{user.email}}" onblur="Validate.apply(this, 'isEmail')">
        </div>
      </div>

      <div class="item">
        <label for="password">Nova senha</label>
        <div class="input">
          <input type="password" name="password" placeholder="Digite sua nova senha">
        </div>
      </div>

      <div class="item">
        <label for="password">Repita senha</label>
        <div class="input">
          <input type="password" name="password-repeat" placeholder="Repita a nova senha">
        </div>
      </div>

      <div class="button-box">
        <button class="button" type="submit">Nova Senha</button>
      </div>

    </form>
  </section>
{% endblock content %}